<resources>
    <!-- Base application theme. -->
    <style name="Theme.OompaLoompas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorTertiary">@color/white</item>
    </style>

    <style name="Text" parent="Theme.OompaLoompas">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Divider" parent="Theme.OompaLoompas">
        <item name="android:background">@color/dark_gray</item>
    </style>
</resources>