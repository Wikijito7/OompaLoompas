<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_oompa__image__oompa_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/row_oompa__oompas_image_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        style="@style/Text.Bold.Body1"
        android:id="@+id/row_oompa__label__full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/row_oompa__image__oompa_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Antonio Lojo" />

    <TextView
        style="@style/Text.Regular.Body1"
        android:id="@+id/row_oompa__label__profession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/row_oompa__label__full_name"
        app:layout_constraintStart_toEndOf="@id/row_oompa__image__oompa_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Developer" />

    <TextView
        style="@style/Text.Regular.Body1"
        android:id="@+id/row_oompa__label__email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/row_oompa__label__profession"
        app:layout_constraintStart_toEndOf="@id/row_oompa__image__oompa_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Email: antonio.lojo@napptilus.com" />

    <TextView
        style="@style/Text.Regular.Body1"
        android:id="@+id/row_oompa__label__age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/row_oompa__label__email"
        app:layout_constraintStart_toEndOf="@id/row_oompa__image__oompa_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="24 years" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/row_oompa__label__age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>