<resources>
    <!-- Base application theme. -->
    <style name="Theme.OompaLoompas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/dark_yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorTertiary">@color/black</item>
    </style>


    <style name="Divider" parent="Theme.OompaLoompas">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Button" parent="Theme.OompaLoompas">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:tint">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">@dimen/body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="Text" parent="Theme.OompaLoompas">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Regular">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Regular.Body1">
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <style name="Text.Bold.Body1">
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <style name="Text.Regular.Body2">
        <item name="android:textSize">@dimen/body2</item>
    </style>

    <style name="Text.Bold.Body2">
        <item name="android:textSize">@dimen/body2</item>
    </style>

    <style name="Text.Bold.Headline">
        <item name="android:textSize">@dimen/headline</item>
    </style>

    <style name="Text.Bold.Body1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Regular.Body2.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Bold.Body2.Secondary">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>