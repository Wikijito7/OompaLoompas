<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OompaLoompas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text" parent="Theme.OompaLoompas">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Regular">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Regular.Body1">
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <style name="Text.Bold.Body1">
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <style name="Text.Regular.Body2">
        <item name="android:textSize">@dimen/body2</item>
    </style>

    <style name="Text.Bold.Body2">
        <item name="android:textSize">@dimen/body2</item>
    </style>

    <style name="Text.Bold.Headline">
        <item name="android:textSize">@dimen/headline</item>
    </style>

    <style name="Text.Bold.Body1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Regular.Body2.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>